{% extends '::base.html.twig' %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading"><h3>Tous mes contacts</h3></div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>E-mail</th>
                        <th>Adresse</th>
                        <th>Téléphone</th>
                        <th>Site web</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for carnet in carnets %}
                    <tr>
                        <td><a href="{{ path('_show', { 'id': carnet.id }) }}">{{ carnet.id }}</a></td>
                        <td>{{ carnet.nom }}</td>
                        <td>{{ carnet.prenom }}</td>
                        <td>{{ carnet.mail }}</td>
                        <td>{{ carnet.adresse }}</td>
                        <td>{{ carnet.telephone }}</td>
                        <td>{{ carnet.site }}</td>
                        <td>
                            <a href="{{ path('_show', { 'id': carnet.id }) }}" class="btn btn-default btn-xs">show</a>
                            <a href="{{ path('_edit', { 'id': carnet.id }) }}" class="btn btn-success btn-xs">edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <a href="{{ path('_new') }}" class="btn btn-default">Ajouter un contact</a>
{% endblock %}
